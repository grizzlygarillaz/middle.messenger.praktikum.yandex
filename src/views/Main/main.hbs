<div class="chat__main chat__main_dark">
  <div class="chat__left-side">
    <div class="chat-panel">
      <div class="chat-panel__tools">
        {{#Trigger openModal="profileModal"}}
          {{#if user.avatar}}
            <img class="user-avatar" src="https://ya-praktikum.tech/api/v2/resources/{{user.avatar}}" alt="profile avatar">
          {{else}}
            <div class="chat-panel__avatar"></div>
          {{/if}}
        {{/Trigger}}
        <input class="chat-panel__search" type="text" placeholder="🔍 Поиск" title="Поиск по диалогам">
        <div class="chat-tools">
          {{#Trigger title="test" className="chat-tools__new-chat" openModal="addChat"}}
            +
          {{/Trigger}}
        </div>
      </div>
      {{{ ChatList ref="chat_list" }}}
    </div>
  </div>
  <div class="chat__right-side">
    {{{Chat settingsModal="chatSettings" }}}
  </div>
  {{{ProfileModal modal="profileModal"}}}
  {{{AddChatModal modal="addChat"}}}
</div>
