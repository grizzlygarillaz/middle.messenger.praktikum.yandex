{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "api/*": ["./api/*"],
      "components/*": ["./components/*"],
      "controllers/*": ["./controllers/*"],
      "core/*": ["./core/*"],
      "helpers/*": ["./helpers/*"],
      "img/*": ["./img/*"],
      "typings/*": ["./typings/*"],
      "util/*": ["./util/*"],
      "views/*": ["./views/*"]
    },
    "lib": [
      "ESNext",
      "DOM"
    ]
  }
}
