{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "api/*": ["./api/*"],
      "components/*": ["./components/*"],
      "services/*": ["./services/*"],
      "core/*": ["./core/*"],
      "helpers/*": ["./helpers/*"],
      "img/*": ["./img/*"],
      "typings/*": ["./typings/*"],
      "utils/*": ["./utils/*"],
      "views/*": ["./views/*"],
      "tests/*": ["./tests/*"]
    },
  },
}
